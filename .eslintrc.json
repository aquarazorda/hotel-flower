{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["solid", "tailwindcss"],
  "extends": [
    "eslint:recommended",
    "plugin:solid/typescript",
    "plugin:tailwindcss/recommended"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "tailwindcss": {
      "config": "./tailwind.config.cjs"
    }
  }
}
