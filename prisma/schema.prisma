generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Room {
  id          Int          @id @default(autoincrement())
  msId        Int          @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  name        String
  description String
  blocked     BlockedDate?
}

model BlockedDate {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  dates     Json
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    Int      @unique
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
}
